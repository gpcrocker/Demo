<?xml version="1.0" encoding="UTF-8"?>
<phpunit bootstrap="./tests/phpunit.php">
    <testsuite name="unit">
        <directory>./tests</directory>
    </testsuite>
    <filter>
        <whitelist>
            <directory>./src</directory>
        </whitelist>
    </filter>
    <logging>
            <log type="testdox-text" target="build/phpunit/testdox.txt"/>
    </logging>
</phpunit>
